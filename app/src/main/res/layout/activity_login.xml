<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/login">
    <ImageView
        android:id="@+id/btn_ic_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:background="@drawable/border_ic_back"
        android:src="@drawable/ic_back"
        android:layout_margin="10dp"
        android:focusable="true">
    </ImageView>
    <TextView
        android:id="@+id/tv_title"
        android:layout_marginTop="33dp"
        android:layout_marginBottom="62dp"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:text="Login"
        android:gravity="center"
        android:textSize="48sp"
        android:fontFamily="@font/black_and_white_picture"
        android:textColor="#FFF9F9"
        >
    </TextView>

    <RelativeLayout
        android:layout_below="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.cardview.widget.CardView
            android:id="@+id/cv_body"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            app:cardBackgroundColor="#80171616"
            app:cardCornerRadius="30dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/tv_email"
                    android:layout_width="200dp"
                    android:layout_height="22dp"
                    android:text="Email:"
                    android:layout_marginStart="21dp"
                    android:layout_marginEnd="107dp"
                    android:layout_marginTop="51dp"
                    android:fontFamily="@font/black_and_white_picture"
                    android:textSize="16dp"
                    android:textColor="@color/white">
                </TextView>
                <LinearLayout
                    android:id="@+id/ll_email"
                    android:layout_below="@+id/tv_email"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginStart="11dp"
                    android:layout_marginEnd="11dp"
                    android:background="@drawable/border_textview_edittext"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_margin="10dp"
                        android:layout_gravity="center"
                        android:layout_width="24dp"
                        android:layout_height="15dp"
                        android:src="@drawable/ic_people">
                    </ImageView>
                    <EditText
                        android:id="@+id/edt_email"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textSize="16sp"
                        >
                    </EditText>
                </LinearLayout>
                <TextView
                    android:id="@+id/tv_password"
                    android:layout_below="@+id/ll_email"
                    android:layout_width="200dp"
                    android:layout_height="22dp"
                    android:text="Password:"
                    android:textStyle="bold"
                    android:layout_marginStart="21dp"
                    android:layout_marginEnd="107dp"
                    android:layout_marginTop="33dp"
                    android:fontFamily="@font/black_and_white_picture"
                    android:textSize="16dp"
                    android:textColor="@color/white">
                </TextView>
                <LinearLayout
                    android:id="@+id/ll_password"
                    android:layout_below="@+id/tv_password"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginStart="11dp"
                    android:layout_marginEnd="11dp"
                    android:background="@drawable/border_textview_edittext"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_margin="10dp"
                        android:layout_gravity="center"
                        android:layout_width="24dp"
                        android:layout_height="15dp"
                        android:src="@drawable/ic_key">
                    </ImageView>
                    <EditText
                        android:id="@+id/edt_password"
                        android:layout_below="@+id/tv_password"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textSize="16sp">
                    </EditText>
                </LinearLayout>
                <TextView
                    android:id="@+id/tv_forgot_password"
                    android:layout_below="@+id/ll_password"
                    android:layout_centerHorizontal="true"
                    android:text="Forgot Password ?"
                    android:textSize="14dp"
                    android:textColor="@color/white"
                    android:fontFamily="@font/black_and_white_picture"
                    android:layout_marginTop="17dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                </TextView>
                <Button
                    android:layout_below="@+id/tv_forgot_password"
                    android:clickable="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="17dp"
                    android:layout_width="163dp"
                    android:layout_height="39dp"
                    android:layout_marginBottom="35dp"
                    android:text="Login"
                    android:fontFamily="@font/black_and_white_picture"
                    android:textColor="@color/white"
                    android:background="@drawable/border_button_login"
                    android:textSize="18sp">
                </Button>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/tv_or"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="OR"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/cv_body"
            android:layout_marginTop="23dp"
            android:textSize="16dp">
        </TextView>

        <RelativeLayout
            android:id="@+id/btn_google_facebook"
            android:layout_above="@+id/btn_click_here_to_create_new_account"
            android:layout_width="match_parent"
            android:layout_height="52dp">
            <ImageView
                android:id="@+id/btn_facebook_button"
                android:layout_marginStart="16dp"
                android:layout_width="146dp"
                android:layout_height="52dp"
                android:src="@drawable/ic_facebook_button">
            </ImageView>
            <ImageView
                android:id="@+id/btn_google_button"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="16dp"
                android:layout_width="146dp"
                android:layout_height="52dp"
                android:src="@drawable/ic_google_button">
            </ImageView>
        </RelativeLayout>

        <TextView
            android:id="@+id/btn_click_here_to_create_new_account"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Click here to create new account "
            android:textSize="16dp"
            android:clickable="true"
            android:fontFamily="@font/times_new_roman"
            android:layout_marginTop="58dp"
            android:layout_marginBottom="6dp"
            android:layout_marginStart="54dp"
            android:layout_marginEnd="54dp"
            android:textStyle="bold"
            android:textColor="@color/black">
        </TextView>
    </RelativeLayout>

</RelativeLayout>