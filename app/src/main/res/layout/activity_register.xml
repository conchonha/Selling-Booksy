<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/register">
    <ImageView
        android:id="@+id/imv_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_back"
        android:layout_margin="10dp"
        android:background="@drawable/border_ic_back">
    </ImageView>
    <TextView
        android:id="@+id/tv_register"
        android:layout_below="@+id/imv_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Register"
        android:textColor="@color/white"
        android:textSize="48dp"
        android:textStyle="bold"
        android:fontFamily="@font/black_and_white_picture"
        android:layout_centerHorizontal="true">
    </TextView>
    <androidx.cardview.widget.CardView
        android:id="@+id/cv_body"
        android:layout_below="@+id/tv_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="17dp"
        android:layout_marginEnd="17dp"
        app:cardCornerRadius="30dp"
        app:cardBackgroundColor="#80171616">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="22dp"
                android:text="Your Name: "
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:textSize="16dp"
                android:fontFamily="@font/black_and_white_picture"
                android:textColor="#FFF9F9">
            </TextView>
            <LinearLayout
                android:layout_marginTop="1dp"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginStart="11dp"
                android:layout_marginEnd="11dp"
                android:layout_marginBottom="18dp"
                android:background="@drawable/border_textview_edittext"
                android:orientation="horizontal">
                <ImageView
                    android:layout_gravity="center"
                    android:layout_marginStart="10dp"
                    android:layout_width="24dp"
                    android:layout_height="15dp"
                    android:src="@drawable/ic_name">
                </ImageView>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="11dp"
                    android:inputType="text"
                    android:id="@+id/mEdtname"
                    android:background="@android:color/transparent"
                    android:layout_marginEnd="11dp">
                </EditText>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="22dp"
                android:text="Phone Number: "
                android:layout_marginStart="21dp"
                android:layout_marginTop="12dp"
                android:textSize="16dp"
                android:fontFamily="@font/black_and_white_picture"
                android:textColor="#FFF9F9">
            </TextView>
            <LinearLayout
                android:layout_marginTop="1dp"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginStart="11dp"
                android:layout_marginEnd="11dp"
                android:layout_marginBottom="18dp"
                android:background="@drawable/border_textview_edittext"
                android:orientation="horizontal">
                <ImageView
                    android:layout_gravity="center"
                    android:layout_marginStart="10dp"
                    android:layout_width="24dp"
                    android:layout_height="15dp"
                    android:src="@drawable/ic_phone">
                </ImageView>
                <EditText
                    android:layout_width="match_parent"
                    android:id="@+id/mEdtPhone"
                    android:inputType="phone"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:layout_marginStart="11dp"
                    android:layout_marginEnd="11dp">
                </EditText>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="22dp"
                android:text="Address: "
                android:layout_marginStart="21dp"
                android:layout_marginTop="12dp"
                android:textSize="16dp"
                android:fontFamily="@font/black_and_white_picture"
                android:textColor="#FFF9F9">
            </TextView>
            <LinearLayout
                android:layout_marginTop="1dp"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginStart="11dp"
                android:layout_marginEnd="11dp"
                android:layout_marginBottom="18dp"
                android:background="@drawable/border_textview_edittext"
                android:orientation="horizontal">
                <ImageView
                    android:layout_gravity="center"
                    android:layout_marginStart="10dp"
                    android:layout_width="24dp"
                    android:layout_height="15dp"
                    android:src="@drawable/ic_address">
                </ImageView>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/mEdtAddress"
                    android:inputType="text"
                    android:background="@android:color/transparent"
                    android:layout_marginStart="11dp"
                    android:layout_marginEnd="11dp">
                </EditText>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="22dp"
                android:text="Email: "
                android:layout_marginStart="21dp"
                android:layout_marginTop="12dp"
                android:textSize="16dp"
                android:fontFamily="@font/black_and_white_picture"
                android:textColor="#FFF9F9">
            </TextView>
            <LinearLayout
                android:layout_marginTop="1dp"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginStart="11dp"
                android:layout_marginEnd="11dp"
                android:layout_marginBottom="18dp"
                android:background="@drawable/border_textview_edittext"
                android:orientation="horizontal">
                <ImageView
                    android:layout_gravity="center"
                    android:layout_marginStart="10dp"
                    android:layout_width="24dp"
                    android:layout_height="15dp"
                    android:src="@drawable/ic_email">
                </ImageView>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/mEdtEmail"
                    android:inputType="textEmailAddress"
                    android:background="#00000000"
                    android:layout_marginStart="11dp"
                    android:layout_marginEnd="11dp"/>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="22dp"
                android:text="Password: "
                android:layout_marginStart="21dp"
                android:layout_marginTop="12dp"
                android:textSize="16dp"
                android:fontFamily="@font/black_and_white_picture"
                android:textColor="#FFF9F9">
            </TextView>
            <LinearLayout
                android:layout_marginTop="1dp"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginStart="11dp"
                android:layout_marginEnd="11dp"
                android:layout_marginBottom="18dp"
                android:background="@drawable/border_textview_edittext"
                android:orientation="horizontal">
                <ImageView
                    android:layout_gravity="center"
                    android:layout_marginStart="10dp"
                    android:layout_width="24dp"
                    android:layout_height="15dp"
                    android:src="@drawable/ic_key">
                </ImageView>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/mEdtPassword"
                    android:password="true"
                    android:inputType="textPassword"
                    android:background="@android:color/transparent"
                    android:layout_marginStart="11dp"
                    android:layout_marginEnd="11dp"/>
            </LinearLayout>

            <TextView
                android:id="@+id/tv_please_enter_your_username"
                android:layout_width="wrap_content"
                android:layout_height="22dp"
                android:text="Confirm Password: "
                android:layout_marginStart="21dp"
                android:layout_marginTop="12dp"
                android:textSize="16dp"
                android:fontFamily="@font/black_and_white_picture"
                android:textColor="#FFF9F9">
            </TextView>
            <LinearLayout
                android:layout_below="@+id/tv_please_enter_your_username"
                android:layout_marginTop="1dp"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginStart="11dp"
                android:layout_marginEnd="11dp"
                android:layout_marginBottom="18dp"
                android:background="@drawable/border_textview_edittext"
                android:orientation="horizontal">
                <ImageView
                    android:layout_gravity="center"
                    android:layout_marginStart="10dp"
                    android:layout_width="24dp"
                    android:layout_height="15dp"
                    android:src="@drawable/ic_key">
                </ImageView>
                <EditText
                    android:id="@+id/mEdtConfirmPass"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType="textPassword"
                    android:password="true"
                    android:layout_marginStart="11dp"
                    android:background="@android:color/transparent"
                    android:layout_marginEnd="11dp">
                </EditText>
            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <Button
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_width="163dp"
        android:layout_height="39dp"
        android:layout_marginStart="88dp"
        android:id="@+id/mBtnRegister"
        android:layout_marginEnd="88dp"
        android:layout_marginBottom="23dp"
        android:text="Register"
        android:fontFamily="@font/black_and_white_picture"
        android:textSize="18dp"
        android:textColor="@color/white"
        android:background="@drawable/border_button_login">
    </Button>

</RelativeLayout>